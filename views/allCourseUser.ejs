<body style="height: 100svh;
background-color: #b3cdd1;background-image: linear-gradient(315deg, #b3cdd1 0%, #9fa4c4 74%);
">

    <div class="container flex-wrap d-flex p-2 ">
        <div class="row align-items-start" style="padding: 10px;">
            <h3> all course 
                <a class="btn btn-primary" href="/instructor/login"
                    style="background: rgb(79, 79, 79); color: rgb(255, 255, 255); padding: 7px; border-radius: 10px;">Login</a>
            </h3>

            </h1>
            <hr>
            <% for (let c of allCourses) { %>
                <div class="card" style="width: 18rem; background-color: #ffffff7b;">
                    <div class="card-body">
                        <div class="card-header">
                            <h5> <%= c.course %>
                            </h5>
                        </div>

                        <p class="card-text">Description: 
                        <br> <%= c.description %>
                        </p>
                        <p class="card-text">Location: <%= c.location %>
                        </p>
                    </div>
                </div>
                <%}%>

        </div>
    </div>

